<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huizhou.receptionbooking.afterLogin.contactGroup.ActivityGroupEdit">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.huizhou.receptionbooking.common.XTextView
            android:id="@+id/groupEditBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="#1D82EA"
            android:drawableLeft="@mipmap/back"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="编辑群组"
            android:textColor="@color/white"
            android:textSize="22dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dip">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="群组名称"
                    android:textColor="@color/txtcolor"
                    />

                <EditText
                    android:id="@+id/grouptNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_selector"
                    android:paddingRight="50dip"
                    />

                <TextView
                    android:id="@+id/grouptNameEditId"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txtcolor"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="群组联系人"
                    android:textColor="@color/txtcolor"
                    />

                <TextView
                    android:id="@+id/groupEditMr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="getGroupPersonEdit"
                    android:paddingRight="50dip"
                    />

                <TextView
                    android:id="@+id/groupEditdMrId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dip">

                <Button
                    android:id="@+id/editGroupConform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="saveGroupEdit"
                    android:text="确定"
                    android:textColor="@color/txtcolor"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
