<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huizhou.receptionbooking.afterLogin.contactGroup.checkbox.ActivityGroupPersonCheckBox">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ckb_groupPerson"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:theme="@style/MyCheckBox"
            android:text="全选"/>

        <Button
            android:id="@+id/groupPerson_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getAllGroupPerson"
            android:textColor="@color/txtcolor"
            android:background="#F1F2F6"
            android:text="确认"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_main_checkboxGroupPerson"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </ListView>

</LinearLayout>
