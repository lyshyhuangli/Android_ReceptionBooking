<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huizhou.receptionbooking.afterLogin.definePublishMeeting.DefineMeetingViewActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.huizhou.receptionbooking.common.XTextView
            android:id="@+id/publishMeetingBackDefine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="#1D82EA"
            android:drawableLeft="@mipmap/back"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="发布会议"
            android:textColor="@color/white"
            android:textSize="@dimen/top_size"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/meetingRoomNameEtAddDefine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/meetingmanager"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:hint="选择会议室"
                    android:onClick="chooseMeetingRoom"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/meetingRoomIdAddDefine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateEtAddDefine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/date"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:hint="选择日期"
                    android:onClick="chooseDate"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.25"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/time"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:text="时间:"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/meetingBeginTimeDefine"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.25"
                    android:background="@color/settingbtn"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:hint="开始时间"
                    android:paddingLeft="10dip"
                    android:onClick="getStartTime"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/meetingEndTimeDefine"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.25"
                    android:background="@color/settingbtn"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:hint="结束时间"
                    android:onClick="getEndTime"
                    android:paddingLeft="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <Spinner
                    android:id="@+id/amOrPmDefine"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.25"
                    android:background="@color/settingbtn"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/threaf"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <EditText
                    android:id="@+id/threadEtDefine"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/bg_edittext_selector"
                    android:hint="主题"
                    android:paddingLeft="2dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/content"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <EditText
                    android:id="@+id/meetingContentDefine"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/bg_edittext_selector"
                    android:hint="内容"
                    android:paddingLeft="2dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/attend"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="参会人:"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/meetingPersonNameDefine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/meetingPersonIdDefine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/cloth"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <EditText
                    android:id="@+id/meetingClothesDefine"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/bg_edittext_selector"
                    android:hint="着装要求"
                    android:paddingLeft="2dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/meetingWakeTypeDefine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="提醒"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/discipline"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <EditText
                    android:id="@+id/meetingDisciplineDefine"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/bg_edittext_selector"
                    android:hint="纪律要求"
                    android:paddingLeft="2dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/contact"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <EditText
                    android:id="@+id/meetingConnectPersonDefine"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/bg_edittext_selector"
                    android:hint="会议联系人"
                    android:paddingLeft="2dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/moble"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <EditText
                    android:id="@+id/meetingConnectPhoneDefine"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/bg_edittext_selector"
                    android:hint="联系人电话"
                    android:paddingLeft="2dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/dep"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:text="组织部门:"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <EditText
                    android:id="@+id/zuzhiDepDefine"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_edittext_selector"
                    android:paddingLeft="2dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/remark"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <EditText
                    android:id="@+id/meetingRemarkDefine"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/bg_edittext_selector"
                    android:hint="备注"
                    android:paddingLeft="2dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip">

                <Button
                    android:id="@+id/publishMeetingSaveDefine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="publishMeetingSaveDefine"
                    android:text="确定"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
