<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huizhou.receptionbooking.afterLogin.tab1.ViewAndConfirmMeetingActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.huizhou.receptionbooking.common.XTextView
            android:id="@+id/viewAndConfirmBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1D82EA"
            android:drawableLeft="@mipmap/back"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="会议信息"
            android:textColor="@color/white"
            android:textSize="@dimen/top_size"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:text="主      题:"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/threaf"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:drawablePadding="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/viewAndConfirmThreaf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:text="时      间:"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/time"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:drawablePadding="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/meetingTime"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="内     容:"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/content"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/viewMeetingContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="会议室:"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_weight="0.3"
                    android:layout_marginTop="5dp"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/meetingmanager"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:onClick="chooseMeetingRoom"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/viewMeetingRoom"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="着装要求:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/cloth"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/viewMeetingClothes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.6"
                    android:paddingLeft="2dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="纪律要求:"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/discipline"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/viewMeetingDiscipline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="联系人:"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/contact"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/viewMeetingConnectPerson"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="联系电话:"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/moble"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/viewMeetingConnectPhone"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/dep"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:text="组织部门:"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/viewMeetingzuzhiDep"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:paddingLeft="2dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="备      注:"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/remark"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/viewMeetingRemark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.6"
                    android:paddingLeft="2dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewUserMeetingLl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/viewPublishMeetingSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:onClick="confirmMeeting"
                    android:text="参会"
                    />

                <Button
                    android:id="@+id/leaveMeeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:onClick="leaveMeeting"
                    android:text="请假"
                    />

                <Button
                    android:id="@+id/viewRepublishMeeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:onClick="republishMeeting"
                    android:text="转发会议"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewAdminMeetingLl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/makeQRCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:onClick="makeQRCode"
                    android:text="生成二维码图片"
                    />

                <Button
                    android:id="@+id/viewMeetingConfirmInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:onClick="viewMeetingConfirmInfo"
                    android:text="参会情况"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>


