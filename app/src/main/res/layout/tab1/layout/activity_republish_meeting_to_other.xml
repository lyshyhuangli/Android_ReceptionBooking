<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huizhou.receptionbooking.afterLogin.tab1.republishMeetingToOtherActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.huizhou.receptionbooking.common.XTextView
            android:id="@+id/republishMeetingBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="#1D82EA"
            android:drawableLeft="@mipmap/back"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="转发会议"
            android:textColor="@color/white"
            android:textSize="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/republishFromContact"
            android:onClick="republishFromContact"
            android:text="从通讯录选择"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从群组选择"
            android:onClick="republishFromPersonGroup"
            android:id="@+id/republishFromPersonGroup"/>

        <TextView
            android:id="@+id/republishAttendPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="选择与会人"
            />

        <TextView
            android:id="@+id/republishAttendPersonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/republishAttendBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="republishAttendBt"
            android:text="确认"
            />
    </LinearLayout>

</LinearLayout>
