<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huizhou.receptionbooking.afterLogin.meetingRoom.ActivityMeetingRoomAdd">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.huizhou.receptionbooking.common.XTextView
            android:id="@+id/meetingRoomAddBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1D82EA"
            android:drawableLeft="@mipmap/back"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="增加会议室"
            android:textColor="@color/white"
            android:textSize="@dimen/top_size"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.4"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/department"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="选择部门:"
                    android:textColor="@color/txtcolor"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/meetingRoomDepAddMr"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:background="@color/settingbtn"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical|left"
                    android:onClick="getDepartmentForMeetingRoom"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/meetingRoomDepAddMrId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.4"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/meetingmanager"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="会议室名:"
                    android:textColor="@color/txtcolor"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/meetingRoomNameAdd"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_edittext_selector"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    android:textSize="15dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.4"
                    android:background="@color/settingbtn"
                    android:drawableLeft="@mipmap/remark"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="备         注:"
                    android:textColor="@color/txtcolor"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/remarkMeetingRoomAdd"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/textview_size"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_edittext_selector"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textColor="@color/txtcolor"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dip">

                <Button
                    android:id="@+id/addMeetingRoomConform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="saveMeetingRoomAdd"
                    android:text="确定"
                    android:textColor="@color/txtcolor"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
