<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huizhou.receptionbooking.afterLogin.meetingRoom.ActivityMeetingRoomAdd">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <com.huizhou.receptionbooking.common.XTextView
            android:id="@+id/meetingRoomAddBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="#1D82EA"
            android:gravity="center"
            android:text="增加会议室"
            android:drawableLeft="@mipmap/back"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="@color/white"
            android:textSize="22dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txtcolor"
                    android:text="选择部门"
                    />

                <TextView
                    android:id="@+id/meetingRoomAddMr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="getDepartmentForMeetingRoom"
                    />

                <TextView
                    android:id="@+id/meetingRoomAddMrId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txtcolor"
                    android:text="会议室名称"
                    />

                <EditText
                    android:id="@+id/meetingRoomNameAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_selector"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txtcolor"
                    android:text="备注"
                    />

                <EditText
                    android:id="@+id/remarkMeetingRoomAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_selector"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dip"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addMeetingRoomConform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txtcolor"
                    android:onClick="saveMeetingRoomAdd"
                    android:text="确定"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
