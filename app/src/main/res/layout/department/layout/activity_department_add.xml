<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huizhou.receptionbooking.afterLogin.department.ActivityDepartmentAdd">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <com.huizhou.receptionbooking.common.XTextView
            android:id="@+id/depatmentAddBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="#1D82EA"
            android:gravity="center"
            android:text="增加部门"
            android:drawableLeft="@mipmap/back"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="@color/white"
            android:textSize="22dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txtcolor"
                    android:text="选择上级部门"
                    />

                <TextView
                    android:id="@+id/depatmentAddMr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="选择上级部门"
                    android:onClick="getParentDepartment"
                    android:paddingRight="50dip"
                    />

                <TextView
                    android:id="@+id/depatmentAddMrId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txtcolor"
                    android:text="部门名称"
                    />

                <EditText
                    android:id="@+id/depatmentNameAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="50dip"
                    android:background="@drawable/bg_edittext_selector"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txtcolor"
                    android:text="备注"
                    />

                <EditText
                    android:id="@+id/remarkDepartmentAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="50dip"
                    android:background="@drawable/bg_edittext_selector"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dip"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addPartmentConform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txtcolor"
                    android:onClick="saveDepartment"
                    android:text="确定"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
